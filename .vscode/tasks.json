{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "mvn install -DskipTests",
            "group": "build",
            "options": {
                "cwd": "smk-parent"
            },
            "problemMatcher":"$msCompile",
        },
        {
            "label": "deploy",
            "type": "shell",
            "command": "./deploy.sh",
            "group": "build",
            // "options": {
            //     "cwd": "smk-parent"
            // }
            "problemMatcher":"$msCompile",
            "dependsOn": "compile"
        }
    ]
}